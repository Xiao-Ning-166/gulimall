<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gulimall.product.mapper.SkuSaleAttrValueMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.gulimall.product.entity.SkuSaleAttrValueEntity" id="skuSaleAttrValueMap">
        <result property="id" column="id"/>
        <result property="skuId" column="sku_id"/>
        <result property="attrId" column="attr_id"/>
        <result property="attrName" column="attr_name"/>
        <result property="attrValue" column="attr_value"/>
        <result property="attrSort" column="attr_sort"/>
    </resultMap>

    <resultMap id="spuSaleAttrVO" type="com.gulimall.product.vo.SpuSaleAttrVO">
        <result property="attrId" column="attr_id"/>
        <result property="attrName" column="attr_name"/>
        <collection property="attrValues" ofType="com.gulimall.product.vo.AttrValueWithSkuIdsVO">
            <result property="attrValue" column="attr_value"/>
            <result property="skuIds" column="sku_ids" />
        </collection>
    </resultMap>

    <select id="listSaleAttrsBySpuId" resultMap="spuSaleAttrVO">
        SELECT
            t2.attr_id, t2.attr_name, t2.attr_value, GROUP_CONCAT(DISTINCT t2.sku_id) AS sku_ids
        FROM
            pms_sku_info AS t1
            LEFT JOIN pms_sku_sale_attr_value AS t2 ON t1.sku_id = t2.sku_id
        WHERE
            t1.spu_id = #{spuId}
        GROUP BY
            t2.attr_id, t2.attr_name, t2.attr_value
    </select>

</mapper>
